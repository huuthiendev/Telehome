<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hhthien.luanvan.telehome">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.LoaiSanPhamActivity" />
        <activity android:name=".Activities.BoLocActivity" />
        <activity android:name=".Activities.ChiTietSanPhamActivity" />
        <activity android:name=".Activities.DangNhapActivity" />
        <activity android:name=".Activities.DangKyActivity" />
        <activity android:name=".Activities.GioHangActivity" />
        <activity android:name=".Activities.ThanhToanActivity" />
        <activity android:name=".Activities.TimKiemActivity">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.KhuyenMaiActivity" />
        <activity android:name=".Activities.ChonLoaiSanPhamActivity"></activity>
    </application>

</manifest>