<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    android:id="@+id/cvSanPhamKM">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgSanPhamKM"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvPhanTramKM"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_gravity="end"
                android:text="50%"
                android:paddingLeft="25dp"
                android:paddingTop="20dp"
                android:textStyle="bold"
                android:background="@drawable/ic_bookmark_red_a700_48dp"/>

            <TextView
                android:id="@+id/tvTenSPKM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Tên sản phẩm"
                android:textSize="18dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tvGiaSPKM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:text="9.800.000"
                android:textSize="20dp"
                android:textColor="@color/colorDoDam"/>

            <TextView
                android:id="@+id/tvGiaGocSPKM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:text="10.000.000"
                android:textSize="20dp"
                android:textColor="@color/colorXamNhatTrung"/>
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>