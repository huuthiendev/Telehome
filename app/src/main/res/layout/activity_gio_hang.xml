<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTrang"
        android:id="@+id/appBar"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <android.support.v7.widget.Toolbar
            android:id="@+id/tbGioHang"
            android:layout_width="match_parent"
            android:layout_height="50dp">
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvGioHang"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/appBar"
        android:layout_above="@+id/linearThanhToan">
    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/linearThanhToan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvTongTienGH"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="18dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="Tổng tiền: 0 đ"
            android:textColor="@color/colorDoDam"
            android:textStyle="bold"
            android:background="@color/colorTrang"/>
        <Button
            android:id="@+id/btnThanhToanGH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorTelehome"
            android:text="Tiến hành thanh toán"/>
    </LinearLayout>
</RelativeLayout>
